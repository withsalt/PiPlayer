{
  "AllowedHosts": "*",
  "AppSettings": {
    //存放数据文件夹，%BASE%为通配符，表示应用程序根目录
    "DataDirectory": "%BASE%/data",
    //数据库配置，一般情况勿动
    "DbConnectionString": "Data Source=%BASE%/data/db/main.sqlite",
    //视频播放显示配置，如果FullScreen为true，Width和Height无效，否者使用Width和Height指定窗口大小播放
    "Screen": {
      "Index": 0, //默认使用的屏幕序号
      "FullScreen": true,
      "Width": 600,
      "Height": 600
    },
    "DefaultScreen": {
      //是否显示默认屏幕
      "IsEnable": false,
      //默认屏幕显示内容（Normal：常规，Hologram：全息）
      "Type": "Normal",
      //默认会展示出来可以访问地址中的地址，如："https://192.168.188.188:8080"
      "DefaultShowHosts": [],
      //只有匹配以下前缀的地址会显示，如："192.168."
      "HostPrefixMatch": []
    },
    //启动之前检查网络连接状态
    "NetworkCheck": true,
    //队列中包含图片的时候，每张图片播放间隔时间
    "ImagePlaybackInterval": 60,
    "AllowExtensions": [
      {
        "Type": "Image",
        "Values": [
          ".webp",
          ".bmp",
          ".pcx",
          ".tif",
          ".gif",
          ".jpeg",
          ".jpg",
          ".tga",
          ".exif",
          ".fpx",
          ".svg",
          ".png"
        ]
      },
      {
        "Type": "Video",
        "Values": [
          ".wmv",
          ".asf",
          ".asx",
          ".rm",
          ".rmvb",
          ".mp4",
          ".mov",
          ".m4v",
          ".avi",
          ".dat",
          ".mkv",
          ".flv"
        ]
      },
      {
        "Type": "Music",
        "Values": [
          ".wav",
          ".flac",
          ".ape",
          ".alac",
          ".mp3",
          ".aac"
        ]
      }
    ]
  }
}
