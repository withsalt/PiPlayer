{
  "AllowedHosts": "*",
  //数据库配置，一般情况勿动
  "DbConnectionStrings": {
    "Name": "default",
    "DbType": "Sqlite",
    "AutoSyncStructure": true,
    "ConnectionString": "Data Source=%BASE%/data/db/main.sqlite",
    "Slaves": []
  },
  "AppSettings": {
    //存放数据文件夹，%BASE%为通配符，表示应用程序根目录
    "DataDirectory": "%BASE%/data",
    //视频播放显示配置，如果FullScreen为true，Width和Height无效，否者使用Width和Height指定窗口大小播放
    "Screen": {
      "Index": 0, //默认使用的屏幕序号
      "FullScreen": true,
      "Width": 600,
      "Height": 600
    },
    //是否启用AP，在首屏显示
    "IsEnableAP": true,
    //AP信息
    "APName": "PiPlayer",
    "APPasswd": "12345678",
    //队列中包含图片的时候，每张图片播放间隔时间
    "ImagePlaybackInterval": 30,
    "AllowExtensions": [
      {
        "Type": "Image",
        "Values": [
          ".webp",
          ".bmp",
          ".pcx",
          ".tif",
          ".gif",
          ".jpeg",
          ".jpg",
          ".tga",
          ".exif",
          ".fpx",
          ".svg",
          ".png"
        ]
      },
      {
        "Type": "Video",
        "Values": [
          ".wmv",
          ".asf",
          ".asx",
          ".rm",
          ".rmvb",
          ".mp4",
          ".mov",
          ".m4v",
          ".avi",
          ".dat",
          ".mkv",
          ".flv"
        ]
      },
      {
        "Type": "Music",
        "Values": [
          ".wav",
          ".flac",
          ".ape",
          ".alac",
          ".mp3",
          ".aac"
        ]
      }
    ]
  }
}
